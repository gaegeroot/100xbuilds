{% extends "base.njk" %}
{% block content %}
    <!-- Hero Section -->
    <section class="site-hero">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7">
                    <div class="site-hero-content">
                        <h1>{{ automationSales.hero.headline }}</h1>
                        <h2 class="txt-secondary">{{ automationSales.hero.subheadline }}</h2>
                        <p class="lead">{{ automationSales.hero.description }}</p>
                        <div class="site-hero-content-buttons">
                            <ul>
                                <li><ahref="{{ automationSales.hero.ctaButton.link }}" class="btn btn-secondary btn-lg">{{ automationSales.hero.ctaButton.text }}</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div
                        class="text-center">
                        <!-- ROI Calculator Widget -->
                        <div class="bg-white p-4 rounded shadow" id="roiCalculator">
                            <h3 class="mb-4">Quick ROI Calculator</h3>
                            <!-- Calculator Form -->
                            <div id="calculatorForm">
                                <div class="mb-3 text-start">
                                    <label class="form-label fw-medium">Annual Revenue</label>
                                    <select class="form-control form-select" id="revenueSelect" required>
                                        <option value="">Select Revenue Range</option>
                                        <option value="7.5">$5M - $10M</option>
                                        <option value="17.5">$10M - $25M</option>
                                        <option value="37.5">$25M - $50M</option>
                                        <option value="75">$50M+</option>
                                    </select>
                                </div>
                                <div class="mb-4 text-start">
                                    <label class="form-label fw-medium">Current Profit Margin</label>
                                    <select class="form-control form-select" id="marginSelect" required>
                                        <option value="">Select Profit Margin</option>
                                        <option value="7.5">5-10%</option>
                                        <option value="12.5">10-15%</option>
                                        <option value="17.5">15-20%</option>
                                        <option value="25">20%+</option>
                                    </select>
                                </div>
                                <!-- Results Preview -->
                                <div id="resultsPreview" class="mb-4 p-4 bg-light rounded" style="display: none;">
                                    <h5 class="text-primary mb-2">Your Potential Annual Savings:</h5>
                                    <div class="h3 text-success mb-3" id="savingsAmount"></div>
                                    <p class="small text-muted mb-3">Based on operational efficiency improvement</p>
                                    <button type="button" class="btn btn-secondary btn-lg w-100" id="getAnalysisBtn">
                                        Get My Detailed $4,997 Analysis
                                    </button>
                                </div>
                            </div>
                            <!-- Lead Capture Form -->
                            <div id="leadCaptureForm" style="display: none;">
                                <div class="mb-3">
                                    <h4 class="text-primary mb-3">Get Your Detailed $4,997 Analysis</h4>
                                    <p class="small text-muted mb-4">Enter your details to receive a comprehensive ROI breakdown and implementation
                                        timeline.</p>
                                </div>
                                <form id="detailedAnalysisForm">
                                    <div class="mb-3 text-start">
                                        <label class="form-label fw-medium">Full Name</label>
                                        <input type="text" class="form-control" id="fullName" required></div>
                                        <div class="mb-3 text-start">
                                            <label class="form-label fw-medium">Email Address</label>
                                            <input type="email" class="form-control" id="email" required></div>
                                            <div class="mb-3 text-start">
                                                <label class="form-label fw-medium">Phone Number</label>
                                                <input type="tel" class="form-control" id="phone" required></div>
                                                <div class="mb-4 text-start">
                                                    <label class="form-label fw-medium">Company Name</label>
                                                    <input type="text" class="form-control" id="company" required></div>
                                                    <button type="submit" class="btn btn-secondary btn-lg w-100">
                                                        Get My Free Analysis
                                                    </button>
                                                </form>
                                                <button type="button" class="btn btn-link mt-2" id="backToCalculator">
                                                    ‚Üê Back to Calculator
                                                </button>
                                            </div>
                                            <!-- Success Message -->
                                            <div id="successMessage" style="display: none;">
                                                <div class="text-center">
                                                    <div class="text-success mb-3">
                                                        <svg width="48" height="48" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                                                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                                            <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0
                                                            1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                                                        </svg>
                                                    </div>
                                                    <h4 class="text-primary mb-3">Thank You!</h4>
                                                    <p class="mb-4">Your detailed ROI analysis is being prepared. We'll contact you within 24 hours to schedule your
                                                        consultation.</p>
                                                    <a href="#consultation" class="btn btn-primary">
                                                        Schedule Consultation Now
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- Value Props Section -->
                    <section class="mybg-light">
                        <div class="container">
                            <div class="row text-center">
                                {% for prop in automationSales.hero.valueProps %}
                                    <div class="col-md-4 my-2">
                                        <div class="p-4">
                                            <h4 class="txt-primary mb-3">{{ prop.title }}</h4>
                                            <p class="text-muted mb-0">{{ prop.description }}</p>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </section>
                    <!-- Problem Section -->
                    <section class="bg-white pt-5">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-10 mx-auto">
                                    <div class="text-center mb-5">
                                        <div class="section-title">
                                            <h2>{{ automationSales.problems.title }}</h2>
                                            <p>{{ automationSales.problems.subtitle }}</p>
                                            <p class="lead">{{ automationSales.problems.description }}</p>
                                        </div>
                                    </div>
                                    <!-- Pain Points -->
                                    <div class="row mb-5">
                                        {% for point in automationSales.problems.painPoints %}
                                            <div class="col-lg-6 mb-4">
                                                <div class="p-4 h-100 brdr-secondary shadow-md rounded-lg">
                                                    <div class="d-flex align-items-start">
                                                        <div class="me-3 flex-shrink-0">
                                                            <div
                                                                class="bg-danger bg-opacity-10 rounded-circle p-2 d-flex align-items-center justify-content-center"
                                                                style="width: 40px; height: 40px;">
                                                                <span class="text-danger fw-bold">‚úï</span>
                                                            </div>
                                                        </div>
                                                        <div>
                                                            <p class="mb-0 fw-medium">{{ point }}</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="site-cta">
                        <div class="container">
                            <div class="text-center py-5">
                                <div class="site-cta-title h3 mb-4">{{ automationSales.problems.calculation | safe }}</div>
                                <div class="site-cta-buttons">
                                    <li>
                                        <a href="{{ automationSales.hero.ctaButton.link }}" class="btn btn-secondary btn-lg">
                                            Stop Losing Money - Get Your Free ROI Analysis
                                        </a>
                                    </li>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="bg-white py-5">
                        <div
                            class="container">
                            <!-- Why Solutions Fail -->
                            <div class="site-project-single">
                                <div class="row">
                                    <div class="text-center">
                                        <div class="section-title">
                                            <h2>{{ automationSales.problems.whyFails.title }}</h2>
                                        </div>
                                    </div>
                                    {% for failure in automationSales.problems.whyFails.failures %}
                                        <div class="col-md-6 mb-3">
                                            <div class="d-flex align-items-start">
                                                <div class="me-3 text-danger fs-5">‚ùå</div>
                                                <p class="mb-0">{{ failure }}</p>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="mt-4 p-4 bg-danger bg-opacity-10 rounded border-start border-danger border-4">
                                    <h4 class="text-danger mb-2">Result:</h4>
                                    <p class="mb-0">{{ automationSales.problems.whyFails.result }}</p>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- Solution Section -->
                    <section class="py-5">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-10 mx-auto">
                                    <div class="text-center mb-5">
                                        <div class="section-title">
                                            <h2>{{ automationSales.solution.title }}</h2>
                                            <p>{{ automationSales.solution.subtitle }}</p>
                                        </div>
                                    </div>
                                    <!-- System Components -->
                                    <div>
                                        <h3 class="mb-4">Our system integrates:</h3>
                                        <div class="row">
                                            {% for component in automationSales.solution.components %}
                                                <div class="col-md-6 mb-4">
                                                    <div class="site-project-single bg-white p-4 h-100 border-0 shadow-sm">
                                                        <div class="d-flex align-items-start mb-3">
                                                            <div class="me-3 text-success fs-3">‚úì</div>
                                                            <div class="flex-grow-1">
                                                                <h4 class="h5 mb-1 txt-primary">{{ component.title }}</h4>
                                                                <p class="small text-muted mb-0 fw-medium">{{ component.subtitle }}</p>
                                                            </div>
                                                        </div>
                                                        <p class="mb-0 text-body-secondary">{{ component.description }}</p>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- Performance Guarantee Section -->
                    <section class="site-cta">
                        <div class="text-center">
                            <div class="site-cta-title h2 mb-3">{{ automationSales.solution.guarantee.title }}</div>
                            <p class="lead txt-secondary mb-5 col-lg-8 mx-auto">{{ automationSales.solution.guarantee.description }}</p>
                            <div class="row justify-content-center mb-5">
                                <div class="col-lg-8 col-xl-6">
                                    <div class="row">
                                        {% for metric in automationSales.solution.guarantee.metrics %}
                                            <div class="col-md-6 mb-3">
                                                <div class="d-flex align-items-center">
                                                    <span class="txt-secondary me-2 fs-5" style="min-width: 24px;">‚úì</span>
                                                    <p class="mb-0 text-white">{{ metric }}</p>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                            <div class="site-cta-title h3 mt-4">{{ automationSales.solution.guarantee.promise }}</div>
                        </div>
                    </section>
                    <!-- Process Section -->
                    <section class="pt-5">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">
                                    <div class="section-title text-center mb-5">
                                        <h2>{{ automationSales.process.title }}</h2>
                                    </div>
                                    {% for phase in automationSales.process.phases %}
                                        <div class="mb-5 pb-5 border-bottom">
                                            <div class="row align-items-center mb-4">
                                                <div class="col-md-8">
                                                    <h3 class="txt-primary">{{ phase.name }} ({{ phase.timeframe }})</h3>
                                                    <h4 class="txt-secondary">{{ phase.subtitle }}</h4>
                                                </div>
                                            </div>
                                            <div class="row">
                                                {% for week in phase.weeks %}
                                                    <div class="col-md-6 mb-4">
                                                        <div class="site-project-single p-4 h-100">
                                                            <h5 class="txt-primary mb-3">{{ week.period }}</h5>
                                                            <ul class="list-unstyled">
                                                                {% for task in week.tasks %}
                                                                    <li class="mb-2">
                                                                        <div class="d-flex align-items-start">
                                                                            <div class="me-2 text-success">‚Ä¢</div>
                                                                            <span>{{ task }}</span>
                                                                        </div>
                                                                    </li>
                                                                {% endfor %}
                                                            </ul>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            </div>
                                            <div
                                                class="mybg-light border border-secondary rounded p-4 text-center position-relative"
                                                style="border-width: 2px !important;">
                                                <div class="position-absolute top-0 start-50 translate-middle">
                                                    <span
                                                        class="mybg-secondary txt-white px-3 py-1 rounded text-uppercase small font-semibold"
                                                        style="font-size: 0.75rem; letter-spacing: 0.06em;">Deliverable</span>
                                                </div>
                                                <div class="mt-3">
                                                    <p class="mb-0 txt-primary font-medium" style="font-size: 1.125rem;">{{ phase.deliverable }}</p>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- What's Included Section -->
                    <section>
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-10 mx-auto">
                                    <div class="section-title text-center mb-5">
                                        <h2>{{ automationSales.included.title }}</h2>
                                        <div class="mb-4">
                                            <span class="h2 txt-primary">{{ automationSales.included.investment }}</span>
                                        </div>
                                        <p class="text-muted fst-italic">{{ automationSales.included.subtitle }}</p>
                                    </div>
                                    {% for category in automationSales.included.components %}
                                        <div class="mb-5">
                                            <h3 class="txt-primary mb-4">{{ category.category }}</h3>
                                            <div class="row">
                                                {% for item in category.items %}
                                                    <div class="col-md-6 mb-4">
                                                        <div class="site-project-single p-4 h-100">
                                                            <div class="d-flex justify-content-between align-items-start mb-3">
                                                                <h5 class="mb-0">{{ item.name }}</h5>
                                                                <span class="badge bg-secondary">{{ item.value }} value</span>
                                                            </div>
                                                            <p class="mb-0 text-muted">{{ item.description }}</p>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- Timeline & Results Section -->
                    <section class="mybg-primary-light py-5 mb-5">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-10 mx-auto">
                                    <div class="section-title text-center mb-5">
                                        <h2 class="text-white">{{ automationSales.timeline.title }}</h2>
                                    </div>
                                    <div class="row">
                                        {% for milestone in automationSales.timeline.milestones %}
                                            <div class="col-md-6 mb-5">
                                                <div class="site-project-single p-5 h-100">
                                                    <h4 class="txt-primary mb-4">{{ milestone.timeframe }}</h4>
                                                    <ul class="list-unstyled">
                                                        {% for improvement in milestone.improvements %}
                                                            <li class="mb-3">
                                                                <div class="d-flex align-items-start">
                                                                    <div class="me-3 text-success fs-5">‚úÖ</div>
                                                                    <span>{{ improvement }}</span>
                                                                </div>
                                                            </li>
                                                        {% endfor %}
                                                    </ul>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- Case Studies Section -->
                    <section>
                        <div class="container">
                            <div class="row">
                                <div class="col-12">
                                    <div class="section-title text-center mb-5">
                                        <h2>Client Success Stories</h2>
                                    </div>
                                    {% for study in automationSales.caseStudies %}
                                        <div class="mb-5">
                                            <div class="site-project-single p-5">
                                                <div class="row">
                                                    <div class="col-md-8">
                                                        <h3 class="txt-primary mb-3">{{ study.title }}</h3>
                                                        <h4 class="txt-secondary mb-4">{{ study.quote }}</h4>
                                                        <p class="mb-4">
                                                            <strong>Challenge:</strong>
                                                            {{ study.challenge }}</p>
                                                        <h5 class="mb-3">Results after 90 days:</h5>
                                                        <div class="row">
                                                            {% for result in study.results %}
                                                                <div class="col-md-6 mb-2">
                                                                    <div class="d-flex align-items-start">
                                                                        <div class="me-2 text-success">‚Ä¢</div>
                                                                        <span>{{ result }}</span>
                                                                    </div>
                                                                </div>
                                                            {% endfor %}
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="site-testimonial-item">
                                                            <p class="site-testimonial-item-body">"{{ study.testimonial }}"</p>
                                                            <div class="site-testimonial-item-header">
                                                                <div class="person">
                                                                    <cite class="text-muted">{{ study.client }}</cite>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- Objection Handling Section -->
                    <section>
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-10 mx-auto">
                                    <div class="section-title text-center mb-5">
                                        <h2>Common Concerns Addressed</h2>
                                    </div>
                                    <div class="row">
                                        {% for objection in automationSales.objections %}
                                            <div class="col-md-6 mb-4">
                                                <div class="site-project-single p-4 h-100">
                                                    <h5 class="txt-primary mb-3">"{{ objection.concern }}"</h5>
                                                    <div class="site-project-single-description">
                                                        <p>{{ objection.response }}</p>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- FAQ Section -->
                    <section class="site-project-single-section">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-10 mx-auto">
                                    <div class="section-title text-center mb-5">
                                        <h2>Frequently Asked Questions</h2>
                                    </div>
                                    {% set outerLoop = loop %}
                                    {% for category in automationSales.faq %}
                                        {% set categoryNum = loop.index %}
                                        <div class="mb-5">
                                            <h3 class="txt-primary mb-4">{{ category.category }}</h3>
                                            <div class="accordion" id="faqAccordion{{ categoryNum }}">
                                                {% for question in category.questions %}
                                                    {% set questionNum = loop.index %}
                                                    <div class="accordion-item mb-3 rounded overflow-hidden border">
                                                        <h2 class="accordion-header" id="faqHeading{{ categoryNum }}{{ questionNum }}">
                                                            <button
                                                                class="accordion-button collapsed"
                                                                type="button"
                                                                data-bs-toggle="collapse"
                                                                data-bs-target="#faqCollapse{{ categoryNum }}{{ questionNum }}"
                                                                aria-expanded="false"
                                                                aria-controls="faqCollapse{{ categoryNum }}{{ questionNum }}">
                                                                {{ question.question }}
                                                            </button>
                                                        </h2>
                                                        <div
                                                            id="faqCollapse{{ categoryNum }}{{ questionNum }}"
                                                            class="accordion-collapse collapse"
                                                            aria-labelledby="faqHeading{{ categoryNum }}{{ questionNum }}"
                                                            data-bs-parent="#faqAccordion{{ categoryNum }}">
                                                            <div class="accordion-body">
                                                                {{ question.answer }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- Final CTA Section -->
                    <section class="site-cta">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-8 mx-auto text-center">
                                    <div class="site-cta-title">{{ automationSales.finalCta.title }}</div>
                                    <h3 class="h2 txt-secondary mb-5">{{ automationSales.finalCta.subtitle }}</h3>
                                    <!-- Core Promise - Simplified -->
                                    <div class="mb-5 p-5 bg-white bg-opacity-10 rounded-3 border border-white border-opacity-20">
                                        <h3 class="text-white mb-4 fw-normal fs-3">
                                            The question isn't whether automation works for luxury builders.<br>
                                                <strong class="txt-secondary">The question is: How much profit are you losing each month without it?</strong>
                                            </h3>
                                            <div class="mt-4 pt-4 border-top border-white border-opacity-20">
                                                <span class="txt-secondary h5">90-Day Guarantee:</span>
                                                <span class="text-white h5">15-25% efficiency improvement or full refund</span>
                                            </div>
                                        </div>
                                        <!-- Exclusive Offer -->
                                        <div class="mb-5">
                                            <h3 class="txt-secondary mb-4 fs-2">Exclusive: Free $4,997 Strategic Assessment</h3>
                                            <div class="row justify-content-center mb-4">
                                                <div class="col-md-5 mb-3">
                                                    <div class="text-white">
                                                        <div class="txt-secondary h6 mb-2">WHAT YOU GET:</div>
                                                        <div class="small">Complete profit analysis & custom ROI projection</div>
                                                    </div>
                                                </div>
                                                <div class="col-md-5 mb-3">
                                                    <div class="text-white">
                                                        <div class="txt-secondary h6 mb-2">INVESTMENT:</div>
                                                        <div class="small">90 minutes of your time. Zero obligations.</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- Primary CTA -->
                                        <div class="mb-5">
                                            <a href="{{ automationSales.finalCta.buttons[0].link }}" class="btn btn-secondary btn-lg px-5 py-3 mb-4 fs-5 fw-semibold">
                                                Schedule My Strategic Assessment
                                            </a>
                                            <div class="d-block">
                                                <a href="{{ automationSales.finalCta.buttons[1].link }}" class="btn btn-outline-light px-4 py-2">
                                                    View Case Studies First
                                                </a>
                                            </div>
                                        </div>
                                        <!-- Contact - Streamlined -->
                                        <div class="mb-4 text-white small">
                                            <span class="txt-secondary">Direct Line:</span>
                                            {{ automationSales.finalCta.contact.phone }}
                                            <span class="mx-3">|</span>
                                            <span class="txt-secondary">Email:</span>
                                            {{ automationSales.finalCta.contact.email }}
                                        </div>
                                        <!-- Trust Indicators - Minimal -->
                                        <div class="row justify-content-center">
                                            <div class="col-auto mb-2">
                                                <small class="text-white opacity-75">üèÜ 100% Success Rate</small>
                                            </div>
                                            <div class="col-auto mb-2">
                                                <small class="text-white opacity-75">üõ°Ô∏è Performance Guaranteed</small>
                                            </div>
                                            <div class="col-auto mb-2">
                                                <small class="text-white opacity-75">‚≠ê A+ BBB Rating</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <script>
                            document.addEventListener('DOMContentLoaded', function () {
                                const revenueSelect = document.getElementById('revenueSelect');
                                const marginSelect = document.getElementById('marginSelect');
                                const getAnalysisBtn = document.getElementById('getAnalysisBtn');
                                const resultsPreview = document.getElementById('resultsPreview');
                                const savingsAmount = document.getElementById('savingsAmount');
                                const calculatorForm = document.getElementById('calculatorForm');
                                const leadCaptureForm = document.getElementById('leadCaptureForm');
                                const detailedAnalysisForm = document.getElementById('detailedAnalysisForm');
                                const backToCalculator = document.getElementById('backToCalculator');
                                const successMessage = document.getElementById('successMessage');
                                // Enable button and show preview when both fields are selected
                                function updateCalculator() {
                                    const revenue = parseFloat(revenueSelect.value);
                                    const margin = parseFloat(marginSelect.value);
