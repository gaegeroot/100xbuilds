{% extends "base.njk" %}
{% block content %}
    <section class="site-hero">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 mx-auto">
                    <div class="site-hero-content text-center">
                        <h6 class="txt-secondary">{{ homepage.hero.subTitle }}</h6>
                        <h1>
                            {{ homepage.hero.title.firstPara }}
                            <br>
                                {{ homepage.hero.title.secondPara }}
                            </h1>
                            <ul class="site-hero-content-buttons">
                                <li>
                                    <a href="{{ homepage.hero.seeWorkBtn.link | url }}" class="btn btn-secondary scroll-to">
                                        <span class="btn-area">
                                            <span data-text="{{ homepage.hero.seeWorkBtn.text }}">
                                                {{ homepage.hero.seeWorkBtn.text }}
                                            </span>
                                        </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/{{ homepage.hero.connectBtn.link | url }}" class="btn btn-primary">
                                        <span class="btn-area">
                                            <span data-text="{{ homepage.hero.connectBtn.text }}">
                                                {{ homepage.hero.connectBtn.text }}
                                            </span>
                                        </span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <a href="#counter" class="site-hero-scroll scroll-to">
                <img src="{{ '/assets/images/arrow-down.svg' | url }}" alt="arrow-down"></a>
            </section>

            <!-- Value Proposition Section -->
            <section class="py-5 bg-white">
                <div class="container">
                    <div class="row">
                        <div
                            class="col-lg-10 mx-auto">
                            <!-- Section Header -->
                            <div class="section-title text-center mb-5">
                                <span class="text-byline txt-secondary mb-3 d-block">{{ homepage.valueProposition.subTitle }}</span>
                                <h2 class="txt-primary mb-4">{{ homepage.valueProposition.title }}</h2>
                                <p class="text-lead txt-medium">{{ homepage.valueProposition.description }}</p>
                            </div>
                            <!-- Core Value Pillars -->
                            <div class="row g-4 mb-5">
                                {% for pillar in valueProposition.pillars %}
                                    <div class="col-lg-6">
                                        <div class="site-project-item h-100 p-4">
                                            <div class="d-flex align-items-start mb-4">
                                                <div class="{{ pillar.iconBg }} rounded-lg p-3 me-4 flex-shrink-0">
                                                    <div class="text-white fs-3">{{ pillar.icon }}</div>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h3 class="txt-primary h4 mb-3">{{ pillar.title }}</h3>
                                                    <div class="mb-3">
                                                        <div class="text-financial h2 txt-secondary mb-1">{{ pillar.metric.number }}</div>
                                                        <div class="stat-label">{{ pillar.metric.label }}</div>
                                                    </div>
                                                </div>
                                            </div>
                                            <p class="txt-medium mb-3">{{ pillar.description }}</p>
                                            <ul class="list-unstyled">
                                                {% for benefit in pillar.benefits %}
                                                    <li class="d-flex align-items-start mb-2">
                                                        <span class="txt-secondary me-2">â€¢</span>
                                                        <span class="txt-dark">{{ benefit }}</span>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                            <!-- Bottom CTA -->
                            <div class="text-center">
                                <div class="row">
                                    <div class="col-lg-8 mx-auto mb-5">
                                        <h3 class="txt-primary mb-3">{{ homepage.valueProposition.cta.title }}</h3>
                                        <p class="txt-medium mb-4">{{ homepage.valueProposition.cta.description }}</p>
                                        <div class="d-flex gap-3 justify-content-center flex-wrap">
                                            <a href="{{ homepage.valueProposition.cta.primaryBtn.link }}" class="btn btn-secondary btn-lg">
                                                {{ homepage.valueProposition.cta.primaryBtn.text }}
                                            </a>
                                            <a href="{{ homepage.valueProposition.cta.secondaryBtn.link }}" class="btn btn-outline btn-lg">
                                                {{ homepage.valueProposition.cta.secondaryBtn.text }}
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <!-- Trust Indicators -->
                                <div class="row justify-content-center">
                                    {% for indicator in valueProposition.trustIndicators %}
                                        <div class="col-lg-3 col-md-4 col-6 mb-3">
                                            <div class="text-center">
                                                <div class="number-executive txt-secondary">{{ indicator.number }}</div>
                                                <div class="stat-label">{{ indicator.label }}</div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Problems Section -->
            <section class="py-5 mybg-light" id="problem">
                <div class="container">
                    <div class="row justify-content-center">
                        <div
                            class="col-lg-8">
                            <!-- Section Header -->
                            <div class="section-title text-center mb-5">
                                <h2 class="txt-primary">{{ homepage.problem.title }}</h2>
                                <p class="lead text-muted">{{ homepage.problem.subtitle }}</p>
                            </div>
                            <!-- Core Problems -->
                            <div class="row g-4 mb-5">
                                {% for problem in homepage.problem.coreProblems %}
                                    <div class="col-md-4">
                                        <div class="card border-0 shadow-sm h-100 p-4 text-center">
                                            <div class="mb-4">
                                                <i class="fa {{ problem.icon }} txt-secondary" style="font-size: 2.5rem;"></i>
                                            </div>
                                            <h4 class="txt-primary mb-3">{{ problem.title }}</h4>
                                            <p class="text-muted mb-3">{{ problem.description }}</p>
                                            <small class="txt-accent fw-medium">{{ problem.impact }}</small>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                            <!-- Insight -->
                            <div class="text-center">
                                <blockquote class="quote-executive">
                                    {{ homepage.problem.insight.statement }}
                                </blockquote>
                                <p class="txt-secondary h5 mb-0">{{ homepage.problem.insight.supporting }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <section class="site-counter" id="counter">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="section-title">
                                <h2 class="txt-dark">{{ achieve.title }}</h2>
                            </div>
                        </div>
                        {% for achievement in achieve.achievements %}
                            <div class="col-lg-3 col-md-6">
                                <div class="site-counter-item">
                                    <span class="site-counter-item-title txt-dark">{{ achievement.title }}</span>
                                    <h3 class="site-counter-item-number txt-dark">{{ achievement.counter }}+</h3>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </section>
            <section class="site-project" id="project">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="section-title">
                                <h2>{{ portfolio.subTitle }}</h2>
                                <p>{{ portfolio.title }}</p>
                            </div>
                        </div>
                        {% for portfolio in collections.portfolios %}
                            <div class="col-lg-6 col-md-10 mx-auto">
                                <div class="site-project-item">
                                    <div class="site-project-item-thumb">
                                        <img src="{{ portfolio.data.img | url }}" alt="project-thumb"></div>
                                        <div class="site-project-item-content">
                                            <span>{{ portfolio.data.subTitle }}</span>
                                            <h3>{{ portfolio.data.title }}</h3>
                                            <a href="{{ portfolio.data.page.url }}" class="read-more">{{ portfolio.data.linkText }}</a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            <div class="col-12 text-center text-lg-start">
                                <a href="{{ portfolio.seeAllbtn.link | url }}" class="text-disrupt">{{ portfolio.seeAllbtn.text }}</a>
                            </div>
                        </div>
                    </div>
                </section>
                <section class="site-testimonial">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <div class="section-title">
                                    <h2>{{ testimonials.title }}</h2>
                                    <p>{{ testimonials.des }}</p>
                                </div>
                            </div>
                            {% for opinion in testimonials.opinion %}
                                <div class="col-lg-4 col-md-6">
                                    <div class="site-testimonial-item">
                                        <div class="site-testimonial-item-header">
                                            <div class="thumb">
                                                <img src="{{ opinion.img| url }}" alt="user-thumb"></div>
                                                <div class="person">
                                                    <h5>{{ opinion.name }}</h5>
                                                    <p>{{ opinion.dig }}</p>
                                                </div>
                                            </div>
                                            <p class="site-testimonial-item-body">
                                                {{ opinion.comment }}
                                            </p>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </section>
                {% endblock %}